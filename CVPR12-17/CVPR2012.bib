@INPROCEEDINGS{6247728,
author={Ochs, Peter and Brox, Thomas},
booktitle={2012 IEEE Conference on Computer Vision and Pattern Recognition}, title={Higher order motion models and spectral clustering},
year={2012},
volume={},
