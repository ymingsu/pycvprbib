@INPROCEEDINGS{6247993,
author={Kadar, Ilan and Ben-Shahar, Ohad},
booktitle={2012 IEEE Conference on Computer Vision and Pattern Recognition}, title={Small sample scene categorization from perceptual relations},
year={2012},
